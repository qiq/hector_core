<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE Config SYSTEM "hector_config.dtd">
<!--
test7: copy of a resource: one reader(1), one simple module(1), two writers(1)
-->
<Config>
	<Server id="test" lib="TestServer.la">
		<threads>1</threads>
		<serverHost>*</serverHost>
		<serverPort>1101</serverPort>
		<logConfig>test.log.props</logConfig>
		<resources>
			<Resource id="R_test" lib="TestResource.la"/>
		</resources>
		<ProcessingEngine id="PE_test">
			<Processor id="P_input">
				<threads>1</threads>
				<modules>
					<Module id="M_input" type="python" lib="TestInput.py">
						<param name="maxItems" value="1000"/>
					</Module>
				</modules>
				<output>
					<nextProcessor ref="P_output1" copy="1"/>
					<nextProcessor ref="P_output2"/>
				</output>
			</Processor>
			<Processor id="P_output1">
				<threads>1</threads>
				<modules>
					<Module id="M_output1" type="python" lib="TestOutput.py"/>
				</modules>
				<input>
					<queue/>
				</input>
			</Processor>
			<Processor id="P_output2">
				<threads>1</threads>
				<modules>
					<Module id="M_output2" type="python" lib="TestOutput.py"/>
				</modules>
				<input>
					<queue/>
				</input>
			</Processor>
		</ProcessingEngine>
	</Server>
</Config>
