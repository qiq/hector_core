<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE Config SYSTEM "config.dtd">

<!--
test4: multithreaded intermediate (simple): reader(5), one simple intermediate(5), one writer(5)
-->

<Config baseDir="../src">

	<Server id="test">
		<threads>1</threads>
		<serverHost>*</serverHost>
		<serverPort>1100</serverPort>
		<processingEngine ref="robot_processing_engine"/>
		<logConfig>../test/test.log.props</logConfig>
		<lib name="servers/robot/Robot.la"/>
	</Server>

	<ProcessingEngine id="robot_processing_engine">
		<processor ref="P_load_resource"/>
		<processor ref="P_simple"/>
		<processor ref="P_save_resource"/>
	</ProcessingEngine>

	<Processor id="P_load_resource">
		<threads>5</threads>
		<modules>
			<module ref="M_load_resource"/>
		</modules>
		<output>
			<nextProcessor ref="P_simple"/>
		</output>
	</Processor>

	<Module id="M_load_resource">
		<lib name="TestInput.la"/>
		<param name="maxItems" value="1000"/>
	</Module>

	<Processor id="P_simple">
		<threads>5</threads>
		<modules>
			<module ref="M_simple"/>
		</modules>
		<input>
			<queue/>
		</input>
		<output>
			<nextProcessor ref="P_save_resource"/>
		</output>
	</Processor>

	<Module id="M_simple">
		<lib name="TestSimple.la"/>
	</Module>

	<Processor id="P_save_resource">
		<threads>5</threads>
		<modules>
			<module ref="M_save_resource"/>
		</modules>
		<input>
			<queue/>
		</input>
	</Processor>

	<Module id="M_save_resource">
		<lib name="TestOutput.la"/>
	</Module>

</Config>
