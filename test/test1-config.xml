<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE Config SYSTEM "config.dtd">
<!--
test1: read-write: one reader(1), one writer(1)
-->
<Config>
	<Server id="test" lib="../src/servers/robot/Robot.la">
		<threads>1</threads>
		<serverHost>*</serverHost>
		<serverPort>1100</serverPort>
		<logConfig>test.log.props</logConfig>
		<ProcessingEngine id="robot_processing_engine">
			<Processor id="P_load_resource">
				<threads>1</threads>
				<modules>
					<Module id="M_load_resource" lib="../src/modules/TestInput.la">
						<param name="maxItems" value="1000"/>
					</Module>
				</modules>
				<output>
					<nextProcessor ref="P_save_resource"/>
				</output>
			</Processor>
			<Processor id="P_save_resource">
				<threads>1</threads>
				<modules>
					<Module id="M_save_resource" lib="../src/modules/TestOutput.la"/>
				</modules>
				<input>
					<queue/>
				</input>
			</Processor>
		</ProcessingEngine>
	</Server>
</Config>
