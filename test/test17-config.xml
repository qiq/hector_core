<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE Config SYSTEM "hector_config.dtd">
<!--
test7: copy of a resource: one reader(1), one simple module(1), two writers(1)
-->
<Config>
	<Server id="test" lib="TestServer.la">
		<threads>1</threads>
		<serverHost>*</serverHost>
		<serverPort>1100</serverPort>
		<logConfig>test.log.props</logConfig>
		<ProcessingEngine id="robot_processing_engine">
			<Processor id="P_load_resource">
				<threads>1</threads>
				<modules>
					<Module id="M_load_resource" type="perl" lib="TestInput.pm">
						<param name="maxItems" value="1000"/>
					</Module>
				</modules>
				<output>
					<nextProcessor ref="P_save_resource1" copy="1"/>
					<nextProcessor ref="P_save_resource2"/>
				</output>
			</Processor>
			<Processor id="P_save_resource1">
				<threads>1</threads>
				<modules>
					<Module id="M_save_resource1" type="perl" lib="TestOutput.pm"/>
				</modules>
				<input>
					<queue/>
				</input>
			</Processor>
			<Processor id="P_save_resource2">
				<threads>1</threads>
				<modules>
					<Module id="M_save_resource2" type="perl" lib="TestOutput.pm"/>
				</modules>
				<input>
					<queue/>
				</input>
			</Processor>
		</ProcessingEngine>
	</Server>
</Config>
