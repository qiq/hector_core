<?xml version="1.0" encoding="UTF-8"?>
<!-- Example config file -->
<!DOCTYPE config SYSTEM "config.dtd">

<config>

	<Main name="master">
		<server-host>*</server-host>
		<server-port>1234</server-port>
		<dir>/tmp/xxx</dir>
	</Main>
	<!--	<run>md5server</run>-->

	<Main name="robot">
		<run>processing-chain</run>
		<run>website</run>
		<hashserver-host>localhost</hashserver-host>
		<hashserver-port>1234</hashserver-port>
		<server-host>*</server-host>
		<server-port>8080</server-port>
	</Main>

	<ProcessingChain name="processing-chain">
		<queueSize>5</queueSize>
		<item>load-resource</item>
		<item>external-test</item>
		<item>save-resource</item>
	</ProcessingChain>

	<ProcessorInput name="load-resource">
		<threads>1</threads>
		<module>load-resource-module</module>
	</ProcessorInput>

	<ModuleInput name="load-resource-module">
		<inputDir>/tmp/input</inputDir>
		<lib>libmodule-load-resource.so</lib>
		<!--<lib>libmodule-dummy.so</lib>-->
	</ModuleInput>

	<ProcessorSimple name="external-test">
		<threads>1</threads>
		<module>external-test-module</module>
		<maxRequests>100</maxRequests>
	</ProcessorSimple>

	<ModuleSimple name="external-test-module">
		<something></something>
		<lib>libmodule-external-simple.so</lib>
		<!--<lib>libmodule-dummy.so</lib>-->
		<path>/home/qiq/work/w2c/hector/src/robot/external-modules/ModuleDummy.sh</path>
	</ModuleSimple>

	<ProcessorOutput name="save-resource">
		<threads>1</threads>
		<module>save-resource-module</module>
	</ProcessorOutput>

	<ModuleOutput name="save-resource-module">
		<lib>libmodule-save-resource.so</lib>
	</ModuleOutput>
</config>
