<?xml version="1.0" encoding="UTF-8"?>
<!-- Example config file -->
<!DOCTYPE config SYSTEM "config.dtd">

<config>

	<Main name="master">
		<server-host>*</server-host>
		<server-port>1234</server-port>
		<dir>/tmp/xxx</dir>
	</Main>

	<Main name="robot">
		<run>processing-chain</run>
	<!--	<run>md5server</run>-->
		<server-host>*</server-host>
		<server-port>8080</server-port>
	</Main>

	<ProcessingChain name="processing-chain">
		<queueSize>1000</queueSize>
		<item>load-resource</item>
		<item>robots</item>
		<item>test</item>
	</ProcessingChain>

	<ProcessorInput name="load-resource">
		<threads>1</threads>
		<module>load-resource-module</module>
	</ProcessorInput>

	<ModuleInput name="load-resource-module">
		<inputDir>/tmp/input</inputDir>
		<lib>libmodule-dummy.so</lib>
		<!--<lib>libmodule-load-resource.so</lib>-->
	</ModuleInput>

	<ProcessorParallel name="robots">
		<threads>2</threads>
		<module>robots-check-url</module>
		<maxRequests>100</maxRequests>
	</ProcessorParallel>

	<ModuleParallel name="robots-check-url">
		<something></something>
		<lib>libmodule-dummy.so</lib>
	</ModuleParallel>

	<ProcessorOutput name="test">
		<threads>1</threads>
		<module>test-module</module>
	</ProcessorOutput>

	<ModuleOutput name="test-module">
		<lib>libmodule-dummy.so</lib>
		<path>/usr/bin/echo</path>
		<arg>-ne</arg>
		<arg>xxx</arg>
	</ModuleOutput>
</config>
